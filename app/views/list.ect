<% extend 'app/views/layout/main.ect' %>

<div>
    <h1><%- @title %></h1>

    <% if @items?.length : %>
    <ul>
        <% for item in @items : %>
        <li><a href="/users/<%- item.id %>"><%- item.name %></a></li>
        <% end %>
    </ul>
    <% else : %>
    <p>List is empty</p>
    <% end %>

</div>

<% block 'footer-info' : %>
<div class="right">page: list</div>
<% end %>